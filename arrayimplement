#include <stdio.h>
#include <stdlib.h>
#define MAX 50
void getdata();
void insert();
void display();
void del();
int a[MAX], count = 0;
int main() {
    int n;
    printf("\nARRAY IMPLEMENTATION OF LIST\n");
    while (1) {
        printf("\n1. Get Data\n2. Insert\n3. Display\n4. Delete\n5. Exit");
        printf("\nEnter your choice: ");
        scanf("%d", &n);
        switch (n) {
            case 1:
                getdata();
                break;
            case 2:
                insert();
                break;
            case 3:
                display();
                break;
            case 4:
                del();
                break;
            case 5:
                exit(0);
                break;
            default:
                printf("Invalid choice. Please try again.");
        }
    }
    return 0;
}
void getdata() {
    int item;
    if (count >= MAX) {
        printf("List is full. Cannot add more items.\n");
        return;
    }
    printf("\nEnter the data: ");
    scanf("%d", &item);
    a[count] = item;
    count++;
}

void display() {
    int i;
    if (count == 0) {
        printf("List is empty.\n");
        return;
    }
    printf("\nThe list is: ");
    for (i = 0; i < count; i++) {
        printf("[%d] ", a[i]);
    }
    printf("\n");
}
void insert() {
    int item, pos, i;
    if (count >= MAX) {
        printf("List is full. Cannot insert more items.\n");
        return;
    }
    printf("\nEnter the data: ");
    scanf("%d", &item);
    printf("Enter the position (0 to %d): ", count);
    scanf("%d", &pos);

    if (pos < 0 || pos > count) {
        printf("Invalid position. Please enter a position between 0 and %d.\n", count);
        return;
    }

    for (i = count; i > pos; i--) {
        a[i] = a[i - 1];
    }
    a[pos] = item;
    count++;
}
void del() {
    int pos, i;
    if (count == 0) {
        printf("List is empty. Nothing to delete.\n");
        return;
    }
    printf("\nEnter the position (0 to %d): ", count - 1);
    scanf("%d", &pos);

    if (pos < 0 || pos >= count) {
        printf("Invalid position. Please enter a position between 0 and %d.\n", count - 1);
        return;
    }

    printf("Deleted item: %d\n", a[pos]);

    for (i = pos; i < count - 1; i++) {
        a[i] = a[i + 1];
    }
    count--;
}

